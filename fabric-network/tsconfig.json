{
	"compilerOptions": {
		"allowJs": false,
		"declaration": true,
		"alwaysStrict": true,
		"module": "commonjs",
		"outDir": "./lib",
		"rootDir": "./src",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,  // Added
	},
	"include": [
		"src/"
	],
	"exclude": [
		"node_modules/"
	]
}
